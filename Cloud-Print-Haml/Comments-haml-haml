#cont
  #head
    %h1 Comment Declared Within Variable
#rot
  %article
    %h2 Resultado
    %div
      %h3 Ejemplo
      / ------ start text ------
      #very
        / ::::::::::::::::::::::::::::::::::::::::::::::
        %p#demo4
        :javascript
          var x4 = 5;      // Declare x, give it the value of 5
          var y4 = x4 + 2;  // Declare y, give it the value of x + 2 
          
          document.getElementById("demo4").innerHTML = y4; // Write y to demo
        %p
          %strong Note:
          The comments are not executed.
        / ::::::::::::::::::::::::::::::::::::::::::::::
        / ------ end text --------
  %article
    %h2 Codigo
    %div
      %h3 HTML
      / ------ start text ------
      %pre#gray
        \&lt;body&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;p id="demo4"&gt;&lt;/p&gt;
        \&lt;p&gt;&lt;strong&gt;Note:&lt;/strong&gt; The comments are not executed.&lt;/p&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;/body&gt;
      / ------ end html --------
      %hr/
      / ------ begin --------
      %h3 JS
      / ------ start js --------
      %pre#gray
        \&lt;script&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        var x4 = 5;      // Declare x, give it the value of 5
        var y4 = x4 + 2;  // Declare y, give it the value of x + 2
        
        document.getElementById("demo4").innerHTML = y4; // Write y to demo
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;/script&gt;
