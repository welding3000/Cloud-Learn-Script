#cont
  #head
    %h1 Comment A Line / /
#rot
  %article
    %h2 Resultado
    %div
      %h3 Ejemplo
      / ------ start text ------
      #very
        / ::::::::::::::::::::::::::::::::::::::::::::::
        %h3#myH
        %p#myP
        :javascript
          // Change heading:
          document.getElementById("myH").innerHTML = "My First Page";
          // Change paragraph:
          document.getElementById("myP").innerHTML = "My first paragraph.";
        %p
          %strong Note:
          The comments are not executed.
        / ::::::::::::::::::::::::::::::::::::::::::::::
        / ------ end text --------
  %article
    %h2 Codigo
    %div
      %h3 HTML
      / ------ start text ------
      %pre#gray
        \&lt;body&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;h3 id="myH"&gt;&lt;/h3&gt;
        \&lt;p id="myP"&gt;&lt;/p&gt;
        \&lt;p&gt;&lt;strong&gt;Note:&lt;/strong&gt; The comments are not executed.&lt;/p&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;/body&gt;
      / ------ end html --------
      %hr/
      / ------ begin --------
      %h3 JS
      / ------ start js --------
      %pre#gray
        \&lt;script&gt;
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \// Change heading:
        document.getElementById("myH").innerHTML = "My First Page";
        \// Change paragraph:
        document.getElementById("myP").innerHTML = "My first paragraph.";
        / ::::::::::::::::::::::::::::::::::::::::::::::
        \&lt;/script&gt;
%hr/
%hr/
